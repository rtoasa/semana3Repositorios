<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="rtoasas3A.Views.vUno"
             Title="uno">
    <!--ESTILOS-->
    <ContentPage.Resources>
        <Style x:Key="estiloLabel" TargetType="Label">
            <Setter Property="FontSize" Value ="50" />
            <Setter Property="TextColor" Value="RED"/>
        </Style>
        <Style x:Key="estilobutton" TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="TextColor" Value="Blue"/>



        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout
        Spacing="20"
        Padding="20">
        <Label 
            Style="{StaticResource estiloLabel}" 
            Text="VISTA UNO"
            VerticalOptions="Center" 
           
            HorizontalOptions="Center" />
        <Entry x:Name="txtUsuario"
               Placeholder="Ingresa el usuario"/>
        <Entry x:Name="txtContrasena"
               IsPassword="True"
               Placeholder="Ingresa la contraseÃ±a"/>

        <Button x:Name="btnAbrir" 
                Style="{StaticResource estilobutton}"
                Text="Abrir Ventana"
                Clicked="btnAbrir_Clicked"/>
        <Button x:Name="btnRegistro"
                Style="{StaticResource estilobutton}"
                Text="Abrir ventana de registro"
                Clicked="btnRegistro_Clicked"/>

    </VerticalStackLayout>
</ContentPage>